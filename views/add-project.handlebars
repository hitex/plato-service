<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Add your project</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <form role="form" onsubmit="return submitTask(this);" action="/">
        <div class="form-group">
            <label>Provider</label>
            <select name="provider" class="form-control">
                {{#each providers}}<option>{{this}}</option>{{/each}}
            </select>
        </div>

        <div class="form-group">
            <label>Repository</label>
            <input name="repo" class="form-control" placeholder="username/project" required pattern=".+\/.+">
        </div>

        <div class="form-group">
            <label>Branch (Optional)</label>
            <input name="branch" class="form-control" placeholder="master">
        </div>

        <div class="form-group">
            <label>JS Source directory (Optional)</label>
            <input name="dir" class="form-control" placeholder="/">
        </div>

        <button type="submit" class="btn btn-default">Submit</button>
    </form>
</div>